<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.chuidiang.ejemplos.Dato">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="date" type="timestamp" />
		<property name="title"></property>

		<joined-subclass name="com.chuidiang.ejemplos.Hijo1">
			<key column="id_hijo1"></key>
			<property name="numero"></property>
		</joined-subclass>

		<joined-subclass name="com.chuidiang.ejemplos.Hijo2">
			<key column="id_hijo2"></key>
			<property name="booleano"></property>
		</joined-subclass>


	</class>

</hibernate-mapping>